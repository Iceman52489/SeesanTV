<?xml version="1.0" encoding="UTF-8" ?>
<document>
  <head>
    <style>
      .banner {
				height: 550;
        padding: 0 180;
      }

      .title {
        tv-position: center;
        tv-text-style: title1;
        text-align: center;
        color: rgb(0,0,0,0.6);
      }

      .subtitle {
        tv-position: center;
        tv-text-style: subtitle1;
        text-align: center;
        color: rgb(0,0,0,0.4);
      }

      .description {
        tv-position: center;
        tv-text-style: body;
        tv-text-max-lines: 2;
        text-align: left;
        color: rgb(0,0,0,0.4);
      }
    </style>
  </head>
  <stackTemplate>
    <banner class="banner">
      <title class="title">{{ title }}</title>
      <subtitle class="subtitle">{{ subtitle }}</subtitle>
    </banner>
  </stackTemplate>
</document>
